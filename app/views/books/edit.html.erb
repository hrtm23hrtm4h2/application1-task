<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>編集画面</title>
</head>
<body>

<h2>Editing Book</h2>
<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
 <% if @book.errors.any? %>
  <div>
    <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
 <% end %>
 <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %><br>

  <%= f.submit 'Update Book' %>

<% end %>
 <div>
 	<div>
    <%= link_to "Show", book_path(@book) %>|
    <a href="/books">Back</a>
 </div>
</body>
</html>